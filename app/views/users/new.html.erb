<div class="col-md-4 col-md-offset-4">
  <h1 class="text-center">Sign up!</h1>
  <form action="<%= users_url %>" method="POST" role="form">
    <%= render 'shared/error.html.erb' %>
    <input type="hidden"
           name="authenticity_token"
           value="<%= form_authenticity_token %>">
    <div class="form-group">
    <label for="user_user_name">Username</label>
    <input type="text" name="user[user_name]" id="user_user_name" class="form-control" >
  </div>
   <div class="form-group">
    <label for="user_password">Password</label>
    <input type="password" name="user[password]" id="user_password" class="form-control" >
   </div>
    <button type="submit" 
            class="btn btn-primary btn-lg col-md-offset-4">
            Create the user!
    </button>
  </form>
</div>